import java.util.Scanner;

public class Converter {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      
      //This program takes distance in meters and converts it to feet, and remaining inches.
      
      System.out.print("Enter distance in meters : ");
      double meters = scnr.nextDouble();
      
      double totalInches = meters * 39.37;
      
      double feetFloat = meters * 3.28;
      
      int feet = (int)feetFloat;
      
      double inches = totalInches - (12.0 * feet);
      
      
      System.out.printf("%.2f meters in Feet and Inches is : %d' %.2f\"", meters, feet, inches);
      System.out.print("\n");
      
   }
}
